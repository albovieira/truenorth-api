  "version": "0.2.0",
  "configurations": [{
      "name": "Debug API",
      "type": "node",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env.local",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
      "env": {
        "NODE_ENV": "local"
      },
      "runtimeArgs": [
        "${workspaceRoot}/src/api.ts"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "integratedTerminal"
    }
  ]
}